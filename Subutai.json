{
    "name": "${environmentName}",
    "description": "Subutai Elasticsearch",
    "version": "1.0.0",
    "author": "https://github.com/absidish",
    "containers": [
        {
            "hostname": "${containerName}",
            "template": "debian-stretch",
            "peer-criteria": "PEER-GROUP",
            "size": "${containerSize}",
                "port-mapping": [
                {
                    "protocol": "http",
                    "domain": "${domainName}",
                    "internal-port": "9200",
                    "external-port": "80"
                }
            ]
        }
    ],
    "peer-criteria": [
        {
            "name": "PEER-GROUP"
        }
    ],
    "ansible-configuration": {
        "source-url": "https://github.com/absidish/elasticsearch/archive/master.zip",
        "ansible-playbook": "install.yml",
        "extra-vars": [
            {
                "key": "es_api_basic_auth_username",
                "value": "${username}"
            },
            {
                "key": "es_api_basic_auth_password",
                "value": "${password}"
            },
            { 
                 "key" :"hostname",
                 "value": "${containerName}" 
            }
           ],
        "groups": [
            {
                "name": "wp",
                "hostnames": [
                    "${containerName}"
                ]
            }
        ]
    },
    "user-variables": {
        "environmentName": {
            "description": "Enter the environment name",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerName": {
            "description": "Enter the container's hostname",
            "type": "string",
            "default": "wp",
            "validation": "[a-zA-Z0-9]+"
        },
        "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "LARGE",
            "validation": "MEDIUM,LARGE,HUGE"
        },
        "username": {
            "description": "Enter the username",
            "type": "string",
            "default": "username",
            "validation": "[a-zA-Z0-9]+"
        },
        "password": {
            "description": "Enter the password",
            "type": "string",
            "default": "password",
            "validation": "[a-zA-Z0-9]+"
        },
        "domainName": {
            "description": "Enter the application domain name",
            "type": "domain",
            "default": "change.the.domain",
            "validation": "[a-zA-Z0-9]+"
        }
    }
}
